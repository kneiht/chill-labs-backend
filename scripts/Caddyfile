api.chillteacher.com {
    # Tự động HTTPS
    # tls {}

    # Cấu hình cho API endpoints
    handle * {
        reverse_proxy chill-labs-backend:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Nén dữ liệu
    encode gzip zstd
}








